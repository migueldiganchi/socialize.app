<% 
    show_button = defined?(submit_button) && submit_button
%>

<%= form_for light, html: { class: 'light-form' } do |f| %>
    <%= f.hidden_field :id %>      
    <%= f.text_area :description, placeholder: 'Qué harías para mejorar la humandidad?' %>

    <% if show_button %>
        <%= f.submit "Publicar mi idea", class: "button radius", disabled: true %>
        <button type="button" 
            class="secondary button radius cancel-new-light" disabled="disabled">
            
                Cancelar
        </button>
    <% end %>

<% end if light %>
