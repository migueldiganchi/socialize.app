<% logged_in_class = logged_in? ? 'logged-in' : '' %>

<button type="button" id="invite_button" class="button face large icn icn-24 friends <%= logged_in_class %>">
    <%= invitation_text_button = @invitation_text_button ? @invitation_text_button : 'Invita a tus amigos' %>
</button>

<%= link_to 'Salir', 
    logout_path, 
    method: 'delete', 
    id: 'logout_button', 
    class: 'button face large ' + logged_in_class,
    data: { confirm: '¿Está seguro que desea salir del juego?' }
%>

<br><br>

<div class="row">
    <div id="invited_users" class="small-5 small-centered columns">
        <% current_user.receivers.each do |invitation| %>
            <div class="invited_user" id="<%= invitation.endpoint_fb_uid %>">
                fb_uid: <%= invitation.endpoint_fb_uid %>
            </div>
        <% end unless current_user.nil? || current_user.receivers.nil? %>
    </div>
</div>